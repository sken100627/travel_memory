<div class="bd-cheatsheet container-fluid bg-body">
  <div class="my-3" id="sizing">
    <div class="bd-heading sticky-xl-top align-self-start mt-5 mb-3 mt-xl-0 mb-xl-2">
      <h3>出発地を登録</h3>
    </div>

    <%= form_with model: @departure, url: departures_path, local: true do |f| %>
      <div class="mb-3">
        <%= f.label :spot %>
        <%= f.text_field :spot, class: "form-control form-control-lg", placeholder: "滋賀県" %>
      </div>
      <div class="mb-3">
        <%= f.label :location %>
        <%= f.text_field :location, class: "form-control form-control-lg", placeholder: "1230000" %>
      </div>

      <div class="md-3">
        <%= f.submit "登録", class: "btn btn-primary btn-lg px-4 gap-3" %>
      </div>
    <% end %>

  </div>
</div>