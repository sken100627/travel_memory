<% if @records.present? %>
  <h1 class="text-center mt-5 mb-5"><%= @destination.place %></h1>

  <div class='googlemap mx-auto mb-4' id='map'></div>

  <h1 class="text-center">移動距離：<%= @distance %>km</h1>

  <div class="table-responsive small px-4 py-5 mt-5">
    <h2 class="text-center mb-3">支出管理</h2>
    <table class="table table-striped table-sm">
      <thead class="text-center">
        <th>項目</th>
        <th>金額</th>
      </thead>
      <tbody>
        <tr>
          <td>宿代</td>
          <td id="accommodation_fee"><%= @record.accommondation_fee %></td>
        </tr>
        <tr>
          <td>ガソリン代</td>
          <td id="gasoline_fee"><%= @record.gasoline_cost %></td>
        </tr>
        <tr>
          <td>食費</td>
          <td id="food_fee"><%= @record.food_expenses %></td>
        </tr>
        <tr>
          <td>高速代</td>
          <td id="express_fee"><%= @record.express_fee %></td>
        </tr>
        <tr>
          <td>合計</td>
          <td><span id='total'>0</span></td>
        </tr>
      </tbody>
    </table>
  </div>

  <div>
    <%= link_to "経費編集", "/destinations/#{@destination.id}/departures/#{@destination.departure.id}/records/#{@destination.departure.id}/edit", class: "btn btn-primary mx-auto d-block w-50 mb-1" %>
    <%= link_to '戻る', 'javascript:history.back()', class: "btn btn-primary mx-auto d-block w-50" %>
  </div>
<% else %>
  <h1 class="ms-5 mt-5 mb-5"><%= @destination.place %></h1>

  <div class='googlemap' id='map'></div>

  <h1>距離：<%= @distance %>km</h1>
  <h1>経費登録がされていません</h1>
  <%= link_to "経費登録", "/destinations/#{@destination.id}/departures/#{@destination.departure.id}/records/new" %>
<% end %>

