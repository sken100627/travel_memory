<h1 class="ms-5 mt-5 mb-5"><%= @destination.place %></h1>

<%= form_with model: @record, url: destination_records_path(@destination.id), local: true do |f| %>
  <div class="table-responsive small px-4 py-5 my-5">
    <table class="table table-striped table-sm">
      <tbody>
        <tr>
          <td>宿代</td>
          <td><%= f.text_field :accommondation_fee%></td>
        </tr>
        <tr>
          <td>ガソリン代</td>
          <td><%= f.text_field :gasoline_cost%></td>
        </tr>
        <tr>
          <td>食費</td>
          <td><%= f.text_field :food_expenses%></td>
        </tr>
        <tr>
          <td>高速代</td>
          <td><%= f.text_field :express_fee%></td>
        </tr>
        <tr>
          <td>合計</td>
          <td><%= f.text_field :total%></td>
        </tr>
      </tbody>
    </table>
    <%= f.submit "登録", class: "btn btn-primary btn-lg px-4 gap-3" %>
  </div>
<% end %>